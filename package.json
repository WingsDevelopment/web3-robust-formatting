{
  "name": "web3-robust-formatting",
  "version": "0.2.3",
  "type": "module",
  "description": "Formatting helpers and robust formatting wrappers for token amounts, values, percentages, and numbers.",
  "main": "dist/index.cjs.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.esm.js",
      "require": "./dist/index.cjs.js",
      "types": "./dist/index.d.ts"
    }
  },
  "keywords": [
    "formatting",
    "web3",
    "robust-formatting",
    "numbers",
    "currency",
    "tokens",
    "crypto",
    "finance",
    "percentage"
  ],
  "author": "Srdjan Rakic <bans.cowboy@gmail.com>",
  "license": "MIT",
  "scripts": {
    "clean": "rimraf dist",
    "build": "npm run clean && rollup -c --bundleConfigAsCjs",
    "test": "node --import tsx --test tests/*.test.mjs",
    "prepublishOnly": "npm run build"
  },
  "peerDependencies": {
    "viem": "^2.0.0"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^28.0.3",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-typescript": "^12.1.2",
    "@types/node": "^22.14.0",
    "rimraf": "^6.0.1",
    "rollup": "^4.39.0",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "tslib": "^2.8.1",
    "tsx": "^4.21.0",
    "typescript": "^5.0.0"
  }
}
